<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:buttonStyle"> @style/Theme.MyApp.Button </item>
        <item name="android:textViewStyle">@style/Theme.MyApp.TextView_Main</item>


    </style>

    <style name="Theme.MyApp.TextView_Main" parent="Widget.MaterialComponents.TextView">

        <item name="android:textSize"> 22sp </item>
        <item name="android:padding"> 20sp </item>


    </style>

    <style name="Theme.MyApp.Button" parent="Widget.MaterialComponents.Button">

        <item name="android:textSize"> 14sp </item>

    </style>

    <style name="Theme.MyApp.textView_italic" parent="Widget.MaterialComponents.TextView">

        <item name="android:textStyle"> italic </item>

    </style>

    <style name="Theme.MyApp.textView_bold" parent="Widget.MaterialComponents.TextView">

        <item name="android:textStyle"> bold </item>

    </style>
    
</resources>